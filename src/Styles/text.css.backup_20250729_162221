/* ============================================================================
   text.css - ВСЕ ТЕКСТОВЫЕ СТИЛИ В ОДНОМ МЕСТЕ
   ----------------------------------------------------------------------------
   ✅ Глобальные стили для заголовков, текста, кнопок
   ✅ Корпоративный шрифт Segoe UI
   ✅ Адаптивность для 3 разрешений
   ✅ Минимум классов, максимум автоматизации
   ============================================================================ */

/* ======================================
   КОРПОРАТИВНЫЕ ПЕРЕМЕННЫЕ
   ====================================== */
:root {
  --font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont, 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  --h1-size: 30px;
  --h2-size: 24px;
  --h3-size: 20px;
  --h4-size: 18px;
  --h5-size: 160px;
  --h6-size: 14px;
  --text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  --text-shadow-strong: 0 2px 8px rgba(0, 0, 0, 0.4);
  --text-size: 16px;
  --text-small: 14px;
  --text-tiny: 12px;
  --text-white: #ffffff;
}

/* ======================================
   БАЗОВЫЕ СТИЛИ ДЛЯ ВСЕГО ТЕКСТА
   ====================================== */
* {
  font-family: var(--font-family);
}

body {
  font-family: var(--font-family);
  font-weight: 400;
  font-size: var(--text-size);
  line-height: 1.5;
  color: var(--text-white);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ======================================
   ЗАГОЛОВКИ - ГЛОБАЛЬНЫЕ СТИЛИ
   ====================================== */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-family);
  font-weight: 700; /* Bold для всех заголовков */
  color: var(--text-white);
  margin: 0 0 16px 0;
  line-height: 1.2;
  text-shadow: var(--text-shadow);
}

h1 { 
  font-size: var(--h1-size);
  text-shadow: var(--text-shadow-strong);
  margin-bottom: 24px;
}

h2 { 
  font-size: var(--h2-size);
  margin-bottom: 20px;
}

h3 { 
  font-size: var(--h3-size);
  margin-bottom: 16px;
}

h4 { font-size: var(--h4-size); }
h5 { font-size: var(--h5-size); }
h6 { font-size: var(--h6-size); }

/* ======================================
   ПАРАГРАФЫ И ОБЫЧНЫЙ ТЕКСТ
   ====================================== */
p {
  font-weight: 400;
  color: var(--text-white);
  margin: 0 0 12px 0;
  line-height: 1.6;
}

span, div, label, li, td, th {
  color: var(--text-white);
}

/* ======================================
   КНОПКИ - ТЕКСТОВЫЕ СТИЛИ
   ====================================== */
button {
  font-family: var(--font-family);
  font-weight: 600; /* SemiBold для кнопок */
  font-size: var(--text-size);
  letter-spacing: 0.02em;
  line-height: 1;
}

/* Размеры текста в кнопках */
.btn-small { font-size: var(--text-small); }
.btn-medium { font-size: var(--text-size); }
.btn-large { font-size: 18px; }
.btn-xlarge { font-size: 20px; }

/* ======================================
   ССЫЛКИ
   ====================================== */
a {
  color: var(--text-white);
  text-decoration: none;
  transition: opacity 0.2s ease;
}

a:hover {
  opacity: 0.8;
  text-decoration: underline;
}

/* ======================================
   INPUT И ФОРМЫ
   ====================================== */
input, textarea, select {
  font-family: var(--font-family);
  font-weight: 400;
  font-size: var(--text-size);
  color: #333; /* Темный текст для полей ввода */
}

input::placeholder,
textarea::placeholder {
  color: #999;
  opacity: 1;
}

label {
  font-weight: 600;
  font-size: var(--text-small);
  margin-bottom: 4px;
  display: inline-block;
}

/* ======================================
   УТИЛИТАРНЫЕ КЛАССЫ (если нужны)
   ====================================== */

/* Выравнивание */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* Вес шрифта */
.text-bold { font-weight: 700; }
.text-semibold { font-weight: 600; }
.text-normal { font-weight: 400; }

/* Размеры */
.text-small { font-size: var(--text-small); }
.text-tiny { font-size: var(--text-tiny); }

/* Специальные эффекты */
.text-shadow { text-shadow: var(--text-shadow); }
.text-no-shadow { text-shadow: none; }

/* Обрезка текста */
.text-truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ======================================
   АДАПТИВНОСТЬ: ПЛАНШЕТЫ (375-768px)
   ====================================== */
@media (max-width: 768px) and (min-width: 375px) {
  :root {
  --font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont, 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  --h1-size: 30px;
  --h2-size: 24px;
  --h3-size: 20px;
  --h4-size: 18px;
  --h5-size: 160px;
  --h6-size: 14px;
  --text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  --text-shadow-strong: 0 2px 8px rgba(0, 0, 0, 0.4);
  --text-size: 16px;
  --text-small: 14px;
  --text-tiny: 12px;
  --text-white: #ffffff;
}
  
  h1 { margin-bottom: 20px; }
  h2 { margin-bottom: 16px; }
}

/* ======================================
   АДАПТИВНОСТЬ: МОБИЛЬНЫЕ (<375px)
   ====================================== */
@media (max-width: 374px) {
  :root {
  --font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont, 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  --h1-size: 30px;
  --h2-size: 24px;
  --h3-size: 20px;
  --h4-size: 18px;
  --h5-size: 160px;
  --h6-size: 14px;
  --text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  --text-shadow-strong: 0 2px 8px rgba(0, 0, 0, 0.4);
  --text-size: 16px;
  --text-small: 14px;
  --text-tiny: 12px;
  --text-white: #ffffff;
}
  
  h1 { margin-bottom: 16px; }
  h2 { margin-bottom: 12px; }
  
  /* Увеличиваем межстрочный интервал для мобильных */
  p { line-height: 1.7; }
}

/* ======================================
   СПЕЦИАЛЬНЫЕ СЛУЧАИ
   ====================================== */

/* Заголовки в модальных окнах (на светлом фоне) */
.modal-content h1,
.modal-content h2,
.modal-content h3,
.modal-content p {
  color: #333;
  text-shadow: none;
}

/* Текст на светлых карточках */
.card-light h1,
.card-light h2,
.card-light h3,
.card-light p,
.card-light span {
  color: #333;
  text-shadow: none;
}